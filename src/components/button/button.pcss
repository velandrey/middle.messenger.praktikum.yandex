.button {
    background: var(--main_color);
    color: var(--white-color);
    outline: none;
    border: none;
    border-radius: var(--radius);
    padding: 10px 10px;
    text-align: center;
    text-transform: capitalize;
    width: 100%;
    max-width: 360px;
    cursor: pointer;
}
.button:hover {
    background: var(--main_color_dark);
}